{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "VaultSetting": {
    "VaultServerUrl": "https://host.docker.internal",
    "VaultServerPort": 8200,
    "VaultHealthCheckUriPart": "v1/sys/health"
  },
  "ReverseProxy": {
    "Routes": {
      "vacancy-route": {
        "ClusterId": "vacancy-cluster",
        "RateLimiterPolicy": "fixed",
        "Match": {
          "Path": "vacancyservice/{**catchall}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catchall}"
          } ]
      },
      "company-route": {
        "ClusterId": "company-cluster",
        "Match": {
          "Path": "companyservice/{**catchall}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catchall}"
          } ]
      },
      "reference-route": {
        "ClusterId": "reference-cluster",
        "Match": {
          "Path": "referenceservice/{**catchall}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catchall}"
          } ]
      },
      "account-route": {
        "ClusterId": "account-cluster",
        "Match": {
          "Path": "accountservice/{**catchall}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catchall}"
          } ]
      }
    },
    "Clusters": {
      "vacancy-cluster": {
        "_comment": "LoadBalancingPolicy\": \"RoundRobin",
        "Destinations": {
          "VacancyService": {
            "Address": "https://host.docker.internal:7114"
          }
        }
      },
      "company-cluster": {
        "Destinations": {
          "CompanyService": {
            "Address": "https://host.docker.internal:7057"
          }
        }
      },
      "reference-cluster": {
        "Destinations": {
          "ReferenceService": {
            "Address": "https://host.docker.internal:7007"
          }
        }
      },
      "account-cluster": {
        "Destinations": {
          "AccountService": {
            "Address": "https://host.docker.internal:7161"
          }
        }
      },
      "LoadBalancingPolicy": "RoundRobin",
      "HealthCheck": {
        "Active": {
          "Enabled": true,
          "Interval": "00:00:60",
          "Timeout": "00:00:05",
          "Policy": "ConsecutiveFailures",
          "Path": "/api/health"
        }
      },
      "SessionAffinity": {
        "Enabled": true,
        "Policy": "Cookie",
        "FailurePolicy": "Redistribute",
        "AffinityKeyName": "SessionKey"
      }
    }
  },
  "$schema": "https://steeltoe.io/schema/v4/schema.json",
  "Consul": {
    "Host": "consul",
    "Discovery": {
      "ServiceName": "gateway-service",
      "HostName": "gateway-api",
      "Port": 7045
    }
  }
}
